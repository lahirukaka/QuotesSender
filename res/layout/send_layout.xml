<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#669900" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_weight="3"
        android:layout_margin="10dp" >

        <EditText
            android:id="@+id/send_txt_quote"
            android:scrollbars="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:lines="4"
            android:padding="2dp"
            android:layout_weight="1"
            android:background="#66B900"
            android:ems="10"
            android:textColor="@android:color/white" >

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="#66B900" >

        <TextView
            android:id="@+id/send_lbl_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/send_lbl_phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/send_txt_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:inputType="phone"
            android:textColor="@android:color/white" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/send_btn_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#66B900"
            android:gravity="center"
            android:text="@string/send_btn_send"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/schedule_btn_send"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="#66B900"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="@string/schedule_btn_send"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>

    <FrameLayout
        android:id="@+id/send_fragment"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/adz"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </FrameLayout>

    </FrameLayout>

</TableLayout>